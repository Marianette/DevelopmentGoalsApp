body, html {
    height: 100%;
}

.home-background {
    background-image: url(<%= asset_path 'background.png' %>);
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
}

.index-text {
  position: absolute;
  text-align: center;
  font-family: 'Oswald', sans-serif;
  color: #fff;
  font-size: 20px;
  z-index: 10;
}

#index-title {
  font-size: 80px;
  margin: 0px;
  padding-top: 100px;
  margin-bottom: 20px;
}

.text-info {
  width: 50%;
  display: inline-block;
  margin-bottom: 10px;
}

.overlay {
    z-index: 0;
    position: absolute;
    left: 0px;
    top: 0px;
    bottom: 0px;
    right: 0px;
    opacity: 0.6;
    background-color: #000;
}
