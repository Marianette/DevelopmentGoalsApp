body, html {
    height: 100%;
}

.home-background {
    background-image: url(<%= asset_path 'background.png' %>);
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    background-attachment: fixed;
}

.index-text {
  position: absolute;
  text-align: center;
  font-family: 'Oswald', sans-serif;
  color: #fff;
  z-index: 10;
}

#index-title {
  font-size: 80px;
  margin: 0px;
  padding-top: 100px;
}

.text-info {
  width: 50%;
  font-family: sans-serif;
  font-size: 16px;
  display: inline-block;
  margin-bottom: 40px;
}

.overlay {
    z-index: 0;
    position: absolute;
    left: 0px;
    top: 0px;
    bottom: 0px;
    right: 0px;
    opacity: 0.65;
    background-color: #000;
}

.index-icons {
    margin-left: 20px;
    margin-right:20px;
}

.index-icons:hover {
    -moz-transform: translate(0px, -5px);
    -ms-transform: translate(0px, -5px);
    -o-transform: translate(0px, -5px);
    -webkit-transform: translate(0px, -5px);
    transform: translate(0px, -5px);
    opacity: 0.8;
}

.no-highlight {
  color: #fff;
}

.button-container {
  display: inline-block;
  vertical-align: top;
  width: 10%;
}

.icon-label {
  display: none;
}
